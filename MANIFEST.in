include README.md
include requirements.txt
include LICENSE
recursive-include resources *
recursive-include src *

# Exclude unwanted directories
prune scanned_forms
prune training_data
prune plots
prune data
prune build
prune dist
prune __pycache__
prune old_builds
prune temp

# Exclude cache and temporary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .git*
global-exclude *.log
global-exclude *.tmp